{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <h1><small>{{ 'title.projects'|trans }}</small></h1>

        <div class="table-responsive">
            <table class="table table-sm">
                <caption>{{ 'title.projects_list'|trans }}</caption>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">{{ 'label.name'|trans }}</th>
                        <th scope="col">{{ 'label.description'|trans }}</th>
                        <th scope="col">{{ 'label.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects.currentPageResults %}
                        <tr>
                            <th scope="row">{{ loop.index }}</th>
                            <td>{{ project.name }}</td>
                            <td>{{ project.description }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary btn-sm" href="{{ path('project_show', {'identifier': project.identifier}) }}">{{ 'action.view'|trans }}</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">{{ 'project.no_projects_found'|trans }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if projects.haveToPaginate %}
            <div>
                {{ pagerfanta(projects, 'twitter_bootstrap4', {routeName: 'project_index_paginated'}) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
